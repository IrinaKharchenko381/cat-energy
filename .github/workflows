name: Deploy to GitHub Pages

on:
  push:
    branches:
      - master  # Укажи ветку, которую ты хочешь использовать для деплоя (например, 'main' или 'master')

jobs:
  deploy:
    runs-on: ubuntu-latest

    steps:
    - name: Checkout repository
      uses: actions/checkout@v2

    - name: Set up Node.js
      uses: actions/setup-node@v2
      with:
        node-version: '14'  # Укажи нужную версию Node.js

    - name: Install dependencies
      run: |
        npm install

    - name: Build project
      run: |
        npm run build  # Или другая команда для сборки проекта

    - name: Deploy to GitHub Pages
      uses: peaceiris/actions-gh-pages@v3
      with:
        personal_token: ${{ secrets.GITHUB_TOKEN }}
        publish_dir: ./dist  # Путь к собранной версии сайта (изменяй под свою структуру)
